    // --- Rendering logic ---

    const tbody = document.getElementById("qbTableBody");
    const searchInput = document.getElementById("search");
    const tierFilter = document.getElementById("tierFilter");
    const confFilter = document.getElementById("confFilter");
    const sortBy = document.getElementById("sortBy");
    const countBadge = document.getElementById("countBadge");

    function tierClass(tier) {
      if (tier === "Elite") return "tier-elite";
      if (tier === "Franchise") return "tier-franchise";
      if (tier === "Solid starter") return "tier-solid";
      if (tier === "Volatile / bridge") return "tier-volatile";
      if (tier === "Rookie / unknown") return "tier-rookie";
      return "";
    }

    function render() {
      const query = searchInput.value.trim().toLowerCase();
      const tier = tierFilter.value;
      const conf = confFilter.value;
      const sortKey = sortBy.value;

      let filtered = qbs.filter((qb) => {
        const matchesSearch =
          !query ||
          qb.name.toLowerCase().includes(query) ||
          qb.team.toLowerCase().includes(query);
        const matchesTier = tier === "all" || qb.tier === tier;
        const matchesConf = conf === "all" || qb.conference === conf;
        return matchesSearch && matchesTier && matchesConf;
      });

      filtered.sort((a, b) => {
        if (sortKey === "team") {
          return a.team.localeCompare(b.team);
        }
        if (sortKey === "name") {
          return a.name.localeCompare(b.name);
        }
        if (sortKey === "rank") {
          return (a.rankApprox ?? 999) - (b.rankApprox ?? 999);
        }
        return 0;
      });

      tbody.innerHTML = "";
      filtered.forEach((qb) => {
        const tr = document.createElement("tr");

        tr.innerHTML = `
          <td>
            <div class="qb-name">${qb.name}</div>
          </td>
          <td>
            <div>${qb.team}</div>
            <div class="team">${qb.conference}</div>
          </td>
          <td>
            <span class="tier-pill ${tierClass(qb.tier)}">
              ${qb.tier}
            </span>
          </td>
          <td>
            <div class="stat-line">
              ${qb.stats2025 || "2025 stat line: not specified in snapshot."}
            </div>
          </td>
          <td>
            <div class="notes">${qb.notes || ""}</div>
            <div class="source-tag">Source: ${qb.source || "Public 2025 coverage"}</div>
          </td>
        `;

        tbody.appendChild(tr);
      });

      countBadge.textContent = `${filtered.length} QB${
        filtered.length === 1 ? "" : "s"
      } shown`;
    }

    searchInput.addEventListener("input", render);
    tierFilter.addEventListener("change", render);
    confFilter.addEventListener("change", render);
    sortBy.addEventListener("change", render);

    render();
  </script>
</body>
</html>
